<%-include('../partials/header')%>
<%-include('../partials/navbar')%>

<div class="row mt-5">
 <%-include('../partials/flash')%>

  <h1 style="text-align: center; margin-top:1rem;">Products</h1>

 <% for(let item of products){ %>
  
   <div class="col-lg-4 product-card">
     <div class="card text-center shadow mt-3 mx-auto" style="width: 25rem;">
      
       <img class="img"  src="<%=item.img%>" class="card-img-top"  alt="...">

       <div class="card-body">
         <h3 class="card-title"> <%= item.name %> </h3>
         <span class="btn like-btn" product-id="<%= item._id %>"> <!--user define attribute -->
         <% if(currentUser && currentUser.wishlist.includes(item._id)){ %>
            <i class="fa-solid fa-heart"></i>
         <% }else{ %>
            <i class="fa-regular fa-heart"></i>
          <% } %>
         </span>
         <h5 class="card-title">Rs. <%= item.price %> </h5>
         <p class="card-text"> <%= item.desc %> </p>
         <p class="card-text"> <%= item.instock %> </p>

         <a href="/products/<%= item._id %>" class="btn btn-primary" >View Product</a>
       </div>
     </div>
   </div>
 <% } %>
</div>

<script src="/JS/laterOn.js"></script>
<%-include('../partials/footer') %>