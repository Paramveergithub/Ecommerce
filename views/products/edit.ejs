<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="row" style="margin-top: 80px;">

  <div class="col-6 mx-auto">
    <form class="needs-validation" action="/products/<%= productFound._id %>?_method=PATCH" method="POST" novalidate>
      <div class="mb-3">
    
        <label for="nam">Name: </label>
        <input type="text" name="name" id="nam" value="<%= productFound.name %>" required>
    
        <div class="valid-feedback">
          ✅
        </div>
        <div id="validationServer03Feedback" class="invalid-feedback">
          ❌
        </div>
      </div>
    
      <div class="mb-3">
        <label for="image" class="form-label">Image Url: </label>
        <input type="text" class="form-control" id="image" name="img" value="<%= productFound.img %>">
        
        <div class="valid-feedback">
          ✅
        </div>
        <div id="validationServer03Feedback" class="invalid-feedback">
          ❌
        </div>
      </div>

      <div class="mb-3">
          <label for="price" class="form-label">Price: </label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Rs.</span>
          <input class="form-control" type="number" name="price" id="price" value="<%= productFound.price %>" required>
          
          <div class="valid-feedback">
            ✅
          </div>
          <div id="validationServer03Feedback" class="invalid-feedback">
            ❌
          </div>
        </div>
      </div>
      
      <div class="mb-3">
        <label for="desc" class="form-label">Description: </label>
        <textarea class="form-control" name="desc" id="desc" rows="3" id="desc" placeholder="Description of the Product"><%= productFound.desc %></textarea>
        <div class="valid-feedback">
          ✅
        </div>
        <div id="validationServer03Feedback" class="invalid-feedback">
          ❌
        </div>
      </div>
      <button type="submit" class="btn btn-sm btn-success">Edit Product</button>
    
    </form>
  </div>
</div>

<%-include('../partials/footer')%>